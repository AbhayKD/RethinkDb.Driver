{
  "desc": "Tests of conversion to and from the RQL number type",
  "tests": [
    {
      "py": "r.expr(1)",
      "js": [
        "r(1)",
        "r.expr(1)"
      ],
      "rb": "r 1",
      "ot": "1"
    },
    {
      "py": "r.expr(-1)",
      "js": [
        "r(-1)",
        "r.expr(-1)"
      ],
      "rb": "r -1",
      "ot": "-1"
    },
    {
      "py": "r.expr(0)",
      "js": [
        "r(0)",
        "r.expr(0)"
      ],
      "rb": "r 0",
      "ot": "0"
    },
    {
      "py": "r.expr(1.0)",
      "js": [
        "r(1.0)",
        "r.expr(1.0)"
      ],
      "rb": "r 1.0",
      "ot": "1.0"
    },
    {
      "py": "r.expr(1.5)",
      "js": [
        "r(1.5)",
        "r.expr(1.5)"
      ],
      "rb": "r 1.5",
      "ot": "1.5"
    },
    {
      "py": "r.expr(-0.5)",
      "js": [
        "r(-0.5)",
        "r.expr(-0.5)"
      ],
      "rb": "r -0.5",
      "ot": "-0.5"
    },
    {
      "py": "r.expr(67498.89278)",
      "js": "r(67498.89278)",
      "rb": "r 67498.89278",
      "ot": "67498.89278"
    },
    {
      "py": "r.expr(1234567890)",
      "js": [
        "r(1234567890)",
        "r.expr(1234567890)"
      ],
      "rb": "r 1234567890",
      "ot": "1234567890"
    },
    {
      "py": "r.expr(-73850380122423)",
      "js": [
        "r.expr(-73850380122423)",
        "r(-73850380122423)"
      ],
      "rb": "r -73850380122423",
      "ot": "-73850380122423"
    },
    {
      "py": {
        "cd": "r.expr(1234567890123456789012345678901234567890)",
        "ot": "float(1234567890123456789012345678901234567890)"
      },
      "js": {
        "cd": "r.expr(1234567890123456789012345678901234567890)",
        "ot": "1234567890123456789012345678901234567890"
      }
    },
    {
      "cd": "r.expr(123.4567890123456789012345678901234567890)",
      "ot": "(123.4567890123456789012345678901234567890)"
    },
    {
      "cd": "r.expr(1).type_of()",
      "ot": "'NUMBER'"
    },
    {
      "cd": "r.expr(1).coerce_to('string')",
      "ot": "'1'"
    },
    {
      "cd": "r.expr(1).coerce_to('number')",
      "ot": "1"
    },
    {
      "py": "r.expr(1.0)",
      "rb": "r 1.0",
      "ot": "int_cmp(1)"
    },
    {
      "py": "r.expr(45)",
      "rb": "r 45",
      "ot": "int_cmp(45)"
    },
    {
      "py": "r.expr(1.2)",
      "rb": "r 1.2",
      "ot": "float_cmp(1.2)"
    }
  ]
}