        <dependency id="System.Dynamic.Runtime" version="4.0.10-beta-23109" />
        <dependency id="System.IO" version="4.0.11-beta-23225" />
        <dependency id="System.Reflection.Extensions" version="4.0.1-beta-23225" />
        <dependency id="System.ComponentModel" version="4.0.1-beta-23405" />
        <dependency id="Microsoft.Extensions.Logging" version="1.0.0-rc1-15673" />
        <dependency id="System.Net.Sockets" version="4.0.10-beta-23109" />
      </group>
    </dependencies>
  </metadata>

